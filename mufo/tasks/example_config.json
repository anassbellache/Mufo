{
  "data": {
    "projections": {
      "path": "/data/experiment/projections.h5",
      "dataset": "/exchange/data"
    },
    "darks": {
      "path": "/data/experiment/darks.h5",
      "dataset": "/exchange/data_dark"
    },
    "flats": {
      "path": "/data/experiment/flats.h5",
      "dataset": "/exchange/data_white"
    },
    "angles": {
      "dataset": "/exchange/theta",
      "units": "radians"
    }
  },
  "preprocessing": {
    "flatField": {
      "absorptionCorrect": true,
      "fixNanAndInf": true,
      "darkScale": 1.0,
      "flatScale": 1.0
    },
    "phaseRetrieval": {
      "paganin": {
        "enabled": true,
        "energy": 25.0,
        "distance": 1.5,
        "pixelSize": 6.5e-06,
        "material": "PMMA",
        "delta": 3.78e-07,
        "beta": 3.12e-10,
        "applyLog": true
      }
    },
    "ringRemoval": {
      "enabled": false,
      "method": "wavelet",
      "parameters": {
        "threshold": 1.0,
        "sigma": 1.0
      }
    }
  },
  "reconstruction": {
    "algorithm": "fbp",
    "filter": "butterworth",
    "filterCutoff": 0.5,
    "filterOrder": 4,
    "center": null,
    "angleRange": 360,
    "precision": "single"
  },
  "output": {
    "directory": "/data/experiment/reconstructed",
    "format": "tiff",
    "dtype": "float32",
    "checkpoints": "/data/experiment/checkpoints",
    "logs": "/data/experiment/logs",
    "compression": {
      "enabled": true,
      "level": 6
    }
  },
  "ufo": {
    "executable": "ufo-launch",
    "pluginDir": "/usr/lib/x86_64-linux-gnu/ufo",
    "kernelPath": "/usr/share/ufo/kernels",
    "deviceType": "gpu",
    "numGpuThreads": null
  },
  "processing": {
    "chunkSize": 500,
    "memoryLimit": 40000000000,
    "verbose": true,
    "saveCheckpoints": true,
    "parallel": true,
    "numWorkers": 32
  }
}